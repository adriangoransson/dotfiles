command = /opt/homebrew/bin/fish
copy-on-select = clipboard

# Disable font ligatures.
font-feature = -calt

# 150 MB
scrollback-limit = 150000000

font-size = 16

macos-titlebar-style = tabs

theme = Dracula

# https://github.com/ghostty-org/ghostty/issues/1392
window-inherit-working-directory = false

keybind = cmd+shift+l=goto_split:right
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+j=goto_split:down
keybind = cmd+shift+k=goto_split:up

keybind = ctrl+shift+h=write_scrollback_file:paste
